<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoyu.ttweather.activity.WeatherDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/ib_close"
            style="@style/ib_title_back"
            android:src="@drawable/button_close_selector" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:text="郑州"
            android:textColor="@android:color/white" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/ib_share"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/button_share_selector" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_weather_detail"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>

</LinearLayout>
